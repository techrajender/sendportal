# Coolify Deployment Environment Variables
# Copy these to your Coolify environment variables

# ============================================
# Application Configuration
# ============================================
APP_NAME=SendPortal
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# ============================================
# Database Configuration (Existing PostgreSQL)
# ============================================
DB_CONNECTION=pgsql
DB_HOST=your-postgres-host
DB_PORT=5432
DB_DATABASE=sendportal
DB_USERNAME=postgres
DB_PASSWORD=your-password

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=your-redis-host
REDIS_PASSWORD=
REDIS_PORT=6379

# ============================================
# Cache & Session
# ============================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# Mail Configuration
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=SendPortal

# ============================================
# SendPortal Settings
# ============================================
SENDPORTAL_REGISTER=false
SENDPORTAL_PASSWORD_RESET=true

# ============================================
# Deployment Settings (Important!)
# ============================================
RUN_MIGRATIONS=true
PUBLISH_VENDOR=true

# ============================================
# AWS (Optional, for SES)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

